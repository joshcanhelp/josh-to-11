---
permalink: "rss.xml"
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
{% set baseUrl = "https://www.joshcanhelp.com" %}
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Posts on Josh Can Help</title>
  <subtitle>Notes on technology, programming, parenting, and self improvement.</subtitle>
  <link href="{{ baseUrl }}/rss.xml" rel="self"/>
  <link href="{{ baseUrl }}"/>
  <id>{{ baseUrl }}</id>
  <updated>{{ collections.rssCollection | rssLastUpdatedDate }}</updated>
  <author>
    <name>Josh Cunningham</name>
    <email>josh@joshcanhelp.com</email>
  </author>
  {%- for post in collections.rssCollection.slice(0, 9) %}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(baseUrl) }}{% endset %}
    <entry>
      <title>{{ post.data.title }}</title>
      <link href="{{ absolutePostUrl }}"/>
      <updated>{{ post.date | rssDate }}</updated>
      <id>{{ absolutePostUrl }}</id>
      <summary>{{ post.data.excerpt }}</summary>
      <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
    </entry>
  {%- endfor %}
</feed>
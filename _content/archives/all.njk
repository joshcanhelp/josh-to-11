{% extends "_html.njk" %}

{% from "macros/postListingSmall.njk" import postListingSmall %}

{% block content %}
  <article>
    <div class="title">
      <h1>All Posts <strong>{{ collections.postsCollection | length }}</strong></h1>
      <br><br>
      <p>
        Get the latest via <a href="https://twitter.com/joshcanhelp">Twitter</a> 
        or <a href="https://www.joshcanhelp.com/feed.xml">RSS</a>.
      </p>
      <p>
        Also see <a href="/archives/tags">All Tags</a> and <a href="/ideas">All Ideas</a>.
      </p>
    </div>

    {% set currentYear = 0 %}
    {% for post in collections.postsCollection %}
      {% set postYear = post.date.getFullYear() %}
      {% if currentYear !== postYear %}
        {% h2br %}{{ postYear }}{% endh2br %}
        {% set currentYear = postYear %}
      {% endif %}
      {{ postListingSmall(post) }}
    {% endfor %}
  </article>
{% endblock %}
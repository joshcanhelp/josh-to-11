{% extends "_html.njk" %}

{% from "macros/postListing.njk" import postListing %}

{% block content %}
  <article>
    <div class="title">
      <h1>All Posts
        <strong>{{ collections.postsCollection | length }}</strong>
      </h1>
    </div>
    {{ content | safe }}
    {% for post in collections.postsCollection %}
      {{ postListing(post, false) }}
    {% endfor %}
  </article>
{% endblock %}
{% extends "_html.njk" %}

{% block content %}
<main>
  {{ content | safe }}
  <ul>
  {%- for post in collections.postsCollection -%}
    <li>
      <a href="{{ post.url | safe }}">{{ post.data.title | safe }}</a><br>
      <em>{{ post.date }}</em> {{ post.data.excerpt | safe }}<br>
      {%- if post.data.featured_img -%}
      <img src="{{ post.data.featured_img | safe }}">
      {%- endif -%}
    </li>
  {%- endfor -%}
  </ul>
</main>
{% endblock %}

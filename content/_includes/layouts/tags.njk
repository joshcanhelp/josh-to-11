{% extends "_html.njk" %}

{% block content %}
<main>
  <h1 class="jch-col--col-head">{{ title }}</h1>
  {{ content | safe }}
  <ul class="jch-list jch-list__feed">
  {%- for name, count in collections.allTags -%}
    <a href="/tag/{{ name | slug }}" class="jch-tag">{{ name | safe }} <strong>{{ count }}</strong></a>
  {%- endfor -%}
  </ul>
</main>
{% endblock %}
